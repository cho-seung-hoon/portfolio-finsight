<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finsight.backend.mapper.UserMapper">

    <select id="countByUserId" resultType="int">
        SELECT COUNT(*) FROM `User` WHERE user_id = #{userId}
    </select>

    <select id="countByNickname" resultType="int">
        SELECT COUNT(*) FROM `User` WHERE user_nickname = #{nickname}
    </select>

    <select id="countByEmail" resultType="int">
        SELECT COUNT(*) FROM `User` WHERE user_email = #{email}
    </select>

    <insert id="insertMember" parameterType="com.finsight.backend.vo.Member">
        INSERT INTO `User` (
        user_id, user_name, user_nickname, user_password,
        user_birthday, user_email, user_created_at, user_role
        ) VALUES (
        #{userId}, #{username}, #{nickname}, #{password},
        #{birthday}, #{email}, #{createdAt}, #{role}
        )
    </insert>

</mapper>
