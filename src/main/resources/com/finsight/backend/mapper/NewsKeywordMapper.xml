<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finsight.backend.mapper.KeywordProductMapper">
    <select id="findProductIdsByKeyword" resultType="java.lang.String">
        SELECT product_id
        FROM keyword_product
        WHERE keyword = #{keyword}
    </select>
</mapper>