<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finsight.backend.mapper.NewsKeywordMapper">
    <select id="findKeywordsByNewsId" resultType="java.lang.String">
        SELECT k.keyword
        FROM news_keyword nk
        JOIN keyword k ON nk.keyword_id = k.keyword_id
        WHERE nk.news_id = #{newsId}
    </select>
</mapper>
